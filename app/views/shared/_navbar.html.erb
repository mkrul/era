<%= javascript_include_tag "navbar_burger" %>

<div class="navbar-container">
  <div class="font-gotham">
    <nav class="navbar py-2 negative-margin" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item p-0">
          <%= link_to "ETHICAL RESCUE ASSOCIATION", root_url, class: "main-title" %>
        </a>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu navbar-container">
        <div class="navbar-end">
          <div class="navbar-item is-hoverable pr-2">
            <% if current_user && current_user.developer? %>
              <div class="navbar-item">
                <%= link_to "Become a Member", become_a_member_path, class: 'nav-link' %>
              </div>
            <% end %>
            <div class="dropdown has-dropdown is-hoverable">
              <div class="dropdown-trigger">
                <a class="navbar-link" aria-haspopup="true" aria-controls="dropdown-about">
                  About
                </a>
              </div>
              <div class="dropdown-menu" id="dropdown-about" role="menu">
                <div class="dropdown-content">
                  <div class="navbar-item is-16">
                    <%= link_to "What is ERA?", what_is_era_path, class: 'nav-link' %>
                  </div>
                  <div class="navbar-item is-16">
                    <%= link_to "Code of Ethics", code_of_ethics_path, class: 'nav-link' %>
                  </div>
                  <div class="navbar-item is-16">
                    <%= link_to "FAQ", faq_path, class: 'nav-link' %>
                  </div>
                </div>
              </div>
            </div>
            <div class="navbar-item">
              <%= link_to "Contact", contact_us_path, class: 'nav-link' %>
            </div>
            <% if user_signed_in? %>
              <div class="dropdown has-dropdown is-hoverable pr-2">
                <div class="dropdown-trigger">
                  <a class="navbar-link" href=<%"#{edit_user_registration_path}"%> aria-haspopup="true" aria-controls="dropdown-email">
                    <%= current_user.email %>
                  </a>
                </div>
                <div class="dropdown-menu" id="dropdown-email" role="menu">
                  <div class="dropdown-content">
                    <div class="navbar-item">
                      <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'dropdown-link logout-btn main-title font-gotham nav-link' %>
                    </div>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="navbar-item">
                <%= link_to 'Log in', new_user_session_path, class: 'nav-link' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>

<%= render 'main/payment_prompt' %>
