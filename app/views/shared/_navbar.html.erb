
<div class="navbar-container">
  <div class="font-gotham">
    <nav class="navbar py-2" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href=<% ApplicationRecord::ROOT_URL %>>
          <span class="main-title">ETHICAL RESCUE ASSOCIATION</span>
        </a>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu f-14 navbar-container">
        <div class="navbar-end">
          <div class="navbar-item has-dropdown is-hoverable pr-2">
            <a class="navbar-link">
              About
            </a>
            <div class="navbar-dropdown">
              <div class="navbar-item">
                <%= link_to "What is ERA?", what_is_era_path %>
              </div>
              <div class="navbar-item">
                <%= link_to "Code of Ethics", code_of_ethics_path %>
              </div>
              <div class="navbar-item">
                <%= link_to "FAQ", faq_path %>
              </div>
            </div>
          </div>
          <% if logged_in_as_admin? %>
            <% if false %>
              <div class="navbar-item has-dropdown is-hoverable pr-2">
                <a class="navbar-link">
                  Resources
                </a>
                <div class="navbar-dropdown">
                  <div class="navbar-item">
                    <%= link_to "Spay & Neuter", spay_and_neuter_path %>
                  </div>
                  <div class="navbar-item">
                    <%= link_to "Products", products_path %>
                  </div>
                  <div class="navbar-item">
                    <%= link_to "Microchips", microchipping_path %>
                  </div>
                  <div class="navbar-item">
                    <%= link_to "Fencing", fencing_path %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <% if user_signed_in? %>
            <div class="navbar-item has-dropdown is-hoverable pr-2">
              <a class="navbar-link" href=<%"#{edit_user_registration_path}"%>>
                <%= current_user.email %>
              </a>
              <div class="navbar-dropdown">
                <% if logged_in_as_admin? %>
                  <div class="navbar-item">
                    <%= link_to "Rescues", animal_rescues_path %>
                  </div>
                <% end %>
                <a class="navbar-item">
                  Profile Settings
                </a>
                <div class="navbar-item">
                  <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'logout-btn main-title font-gotham' %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="navbar-item pr-5">
              <%= link_to 'Log in', new_user_session_path %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</div>

<script>
  $(document).ready(function() {
    $(".navbar-burger").click(function() {
      $(".navbar-burger").toggleClass("is-active");
      $(".navbar-menu").toggleClass("is-active");
    })
  })
</script>