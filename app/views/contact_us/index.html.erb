<div class="contact-container">
  <div class="banner-container" data-testid="contact-us-banner">
    <section class="hero is-large header-image">
      <div class="hero-body">
        <h1 class="title has-text-white">
          Contact Us
        </h1>
        <h5 class="subtitle has-text-white">
          Connect with ERA and get your questions answered
        </h5>
      </div>
    </section>
  </div>

  <section class="section container mt-5" data-testid="feedback-form">
    <section class="content-container">
      <div class="container">
        <h2 class="title mb-4 section-header has-text-centered">Your Feedback Matters</h2>

        <section class="container">
          <div class="columns is-gapless">
            <div class="column">
              <div class="has-text-centered mt-2 mb-5 text-med-grey">
                <p>
                  Our team is here to help and answer any questions you might have.  We look forward to hearing from you. ðŸ˜Š
                <p>
              </div>
            </div>
          </div>
        </section>

        <%= form_with url: contact_us_path, method: :post, data: {turbo: false} do |form| %>
          <div class="field">
            <%= form.label :name, class: "label has-text-weight-light" %>
            <div class="control has-icons-left">
              <%= form.text_field :name, id: "name", class: "input", placeholder: "Name", autofocus: false, required: true %>
              <span class="icon is-left">
                <i class="fa fa-user"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= form.label :email, class: "label has-text-weight-light" %>
            <div class="control has-icons-left">
              <%= form.email_field :email, id: "email", class: "input", placeholder: "Email", required: true %>
              <span class="icon is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= form.label :message, class: "label has-text-weight-light" %>
            <%= form.text_area :message, id: "Message", rows: 5, class: "textarea", placeholder: "Message", required: true %>
          </div>
          <div class="field has-text-danger">
            <%= flash[:recaptcha_error] %>
            <%= recaptcha_tags %>
          </div>
          <%= form.submit "Submit", class: "button is-success" %>
        <% end %>
      </div>
    </section>
  </section>
</div>
