<!DOCTYPE html>
<html>
  <head>
    <title>Ethical Rescue Association</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= favicon_link_tag asset_path("favicon.png") %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <%= javascript_importmap_tags %>
  </head>

  <% if !logged_in_as_admin? %>
    <body>
      <div class="body-container">
        <%= render partial: "shared/navbar" %>
        <div class="top-bar"></div>
        <div>
          <% if notice %>
            <div class="notification is-success is-light text-center">
              <%= notice %>
            </div>
          <% end %>

          <% if alert %>
            <div class="notification is-danger is-light text-center">
              <%= alert %>
            </div>
          <% end %>
          <%= yield %>
        </div>
        <%= render "shared/footer" %>
      </div>
    </body>
  <% else %>
    <body>
      <div class="promo-container">
        <%= video_tag "https://i.imgur.com/RePuY5c.mp4", autoplay: true, loop: false, controls: true %>
      </div>
    </body>
  <% end %>
</html>
