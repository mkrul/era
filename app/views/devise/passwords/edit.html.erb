<div class="container is-max-desktop p-6 is-flex is-justify-content-center">
  <div class="container-small">
    <h2 class="title">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %>
          <em>(14 characters minimum)</em><br />
        <%= f.password_field :password, autofocus: true, class: "input", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "button is-info" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
