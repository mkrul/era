<%
  @active_link = "#{controller_path}##{action_name}"
%>

<div class="section">
  <div class="columns">

    <%= render "shared/admin/sidebar", locals: { active_link: @active_link } %>

    <main class="column px-6">
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <div class="title">Organizations</div>
          </div>
        </div>
      </div>

      <div>
        <% @organizations.each do |organization| %>
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Code</th>
                <th>Category</th>
                <th>Level</th>
                <th>EIN</th>
                <th>Created At</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= organization.id %></td>
                <td><%= organization.name %></td>
                <td><%= organization.code %></td>
                <td><%= organization.category %></td>
                <td><%= organization.level %></td>
                <td><%= organization.ein %></td>
                <td><%= organization.created_at %></td>
                <td>
                  <%= link_to "show", admin_organization_path(organization), class: "ml-3" %>
                </td>
                <td>
                  <%= link_to "edit", edit_admin_organization_path(organization) %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>