<%
  @active_link = "#{controller_path}##{action_name}"
%>

<div class="section">
  <div class="columns">
    <div class="column is-2 pl-5 mr-5 sidebar-container">
      <%= render "shared/admin/sidebar", locals: { active_link: @active_link } %>
    </div>

    <div class="column">
      <div class="title mb-4">
        <%= @organization.name %>
      </div>

      <div class="mb-4">
        <%= link_to "Back", admin_organizations_path %>
      </div>

      <div>
        <table class="table">
          <tbody>
            <p class="mb-3">
              <strong>Code:</strong> <%= @organization.code %>
            </p>
            <p class="mb-3">
              <strong>Category:</strong> <%= @organization.category %>
            </p>
            <p class="mb-3">
              <strong>Level:</strong> <%= @organization.level %>
            </p>
            <p class="mb-3">
              <strong>EIN:</strong> <%= @organization.ein %>
            </p>
            <div style="max-width: 50rem !important;">
              <p class="mb-3">
                <strong>Description:</strong> <%= @organization.description %>
              </p>
            </div>
            <p class="mb-3">
              <strong>Website URL:</strong>
              <a href=<%= @organization.website_url %> target="_blank">
                <%= @organization.website_url %>
              </a>
            </p>
            <p class="mb-3">
              <strong>Facebook URL:</strong>
              <a href=<%= @organization.facebook_url %> target="_blank">
                <%= @organization.facebook_url %>
              </a>
            </p>
            <p class="mb-3">
              <strong>Instagram URL:</strong>
              <a href=<%= @organization.instagram_url %> target="_blank">
                <%= @organization.instagram_url %>
              </a>
            </p>
            <p class="mb-3">
              <strong>TikTok URL:</strong>
              <a href=<%= @organization.tiktok_url %> target="_blank">
                <%= @organization.tiktok_url %>
              </a>
            </p>
            <p class="mb-3">
              <strong>Updated At:</strong> <%= @organization.updated_at %>
            </p>
            <p class="mb-3">
              <strong>Created At:</strong> <%= @organization.created_at %>
            </p>
            <p class="mb-3">
              <strong>Main Photo:</strong>
              <% if @organization.main_photo.attached? %>
                <p>
                  <img src=<%= url_for @organization.main_photo %> class="mt-2 org-photo">
                </p>
              <% end %>
            </p>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>